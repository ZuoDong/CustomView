<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dong.customviews.flowlayout.FlowLayoutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.dong.customviews.flowlayout.FlowLayout
                android:id="@+id/flow_layout"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#228634">
            </com.dong.customviews.flowlayout.FlowLayout>

            <com.dong.customviews.flowlayout.ExpandableFlowLayout
                android:id="@+id/expand_flow_layout"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#228634">
            </com.dong.customviews.flowlayout.ExpandableFlowLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
